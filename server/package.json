{
  "name": "trustwise-server",
  "version": "1.0.0",
  "description": "Policy Engine with LLM Judges - Backend server for content moderation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && nodemon dist/index.js",
    "dev:ts": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:watch": "tsc -w",
    "test": "ts-node src/tests/PolicyEngine.test.ts",
    "test:built": "npm run build && node dist/tests/PolicyEngine.test.js",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "policy-engine",
    "llm",
    "content-moderation",
    "openai",
    "judges",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "mongoose": "^9.0.0",
    "openai": "^4.104.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
